<% if node['chef_client']['config']['log_location'] -%>
LOGFILE=<%= node['chef_client']['config']['log_location'] %>
CHEF_CLIENT_ARGS="-L $LOGFILE"
<% end -%>
CONFIG=<%= node["chef_client"]["conf_dir"] %>/client.rb
INTERVAL=<%= node["chef_client"]["interval"] %>
SPLAY=<%= node["chef_client"]["splay"] %>
CHEF_CLIENT_ARGS="${CHEF_CLIENT_ARGS} -d -c $CONFIG -i $INTERVAL -s $SPLAY <%= node["chef_client"]["daemon_options"].join(' ') %>"
