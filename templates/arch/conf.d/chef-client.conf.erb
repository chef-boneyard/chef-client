<% 
  if node["chef_client"]["log_dir"].to_s == '' 
    logfile_args = ''
  else
    logfile_args = '-L $LOGFILE' 
%>
LOGFILE=<%= node["chef_client"]["log_dir"] %>/client.log
<% end %>
CONFIG=<%= node["chef_client"]["conf_dir"] %>/client.rb
INTERVAL=<%= node["chef_client"]["interval"] %>
SPLAY=<%= node["chef_client"]["splay"] %>
CHEF_CLIENT_ARGS="<%= logfile_args %> -d -c $CONFIG -i $INTERVAL -s $SPLAY <%= node["chef_client"]["daemon_options"].join(' ') %>"
